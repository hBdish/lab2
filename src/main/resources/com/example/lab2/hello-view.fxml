<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Canvas fx:id="canvas" height="400.0" onMouseClicked="#click" width="400.0" />
   <Separator prefWidth="200.0" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          <Button contentDisplay="CENTER" onAction="#onHelloButtonClick" text="Квадрат" textAlignment="CENTER" />
         <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#Cicle" text="Круг" textAlignment="CENTER">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </Button>
         <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#Trin" text="Треугольник" textAlignment="CENTER" />
         <ColorPicker fx:id="coloPicker" />
      </children>
   </HBox>
</VBox>
